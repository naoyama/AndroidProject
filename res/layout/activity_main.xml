<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- あいさつ -->
    <TextView
        android:id="@+id/greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/greeting_morning"
        tools:context=".MainActivity" />

	<!-- 説明 -->
    <TextView
        android:id="@+id/guidance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guidance"
        android:textSize="28sp"
        tools:context=".MainActivity" />

    <!-- ぐー・ちょき・ぱーの絵を横に並べる -->
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonGuu"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:src="@drawable/guu"
	        />

        <ImageButton
            android:id="@+id/buttonChoki"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:src="@drawable/choki"
	        />


        <ImageButton
            android:id="@+id/buttonPar"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:src="@drawable/par"
	        />

    </LinearLayout>


	<!-- 結果 -->
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        tools:context=".MainActivity" />
</LinearLayout>
